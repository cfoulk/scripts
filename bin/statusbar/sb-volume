#! /bin/sh


mute=$(pulsemixer --get-mute)
vol=$(pulsemixer --get-volume | awk '{ print $1 }')

[ "$mute" -eq 1 ] && echo "ðŸ”‡ $vol%" && exit 

case 1 in 
    $((vol >= 70)) ) icon="ðŸ”Š" ;;
    $((vol >= 30)) ) icon="ðŸ”‰" ;;
    $((vol >= 1)) )  icon="ðŸ”ˆ" ;;
